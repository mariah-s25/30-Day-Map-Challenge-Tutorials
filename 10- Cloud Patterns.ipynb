# Data: # https://www.earthenv.org/cloud

import rasterio
from rasterio.windows import from_bounds
import numpy as np
import os
import matplotlib.pyplot as plt
import calendar

# Take path of raster grid and bounding box
def crop_and_read(path, bbox):
    with rasterio.open(path) as src:
        window = from_bounds(*bbox, transform=src.transform)
        data = src.read(1, window=window).astype('float32')
        transform = src.window_transform(window)
        extent = (bbox[0], bbox[2], bbox[1], bbox[3])
    return data, extent

# Bounding box of southeast asia
bbox = (100, -15, 130, 25)

# Avg tiff for each month over 15 years
root = '10. Cloud Cover Data'
files = [f for f in os.listdir(root) if 'MODCF' in f]
files

obs_count = 109500 # 15 years * 365 days * 2 times a day

fn = files[0] # January
data_path = root + '/' +fn

data_cropped, data_extent = crop_and_read(data_path, bbox)
data_pct = (data_cropped / obs_count) * 100
data_pct = data_pct.clip(0, 100) # btw 0-100 %


fig, ax = plt.subplots(1, 1, figsize=(6,6), constrained_layout=True)

month_num = int(fn.split('_')[-1].split('.')[0])
month_name = calendar.month_name[month_num]

im1 = ax.imshow(data_pct, cmap='winter', extent=data_extent)
# The more green the more cloudy

plt.suptitle(
    'Cloud Frequency (%)\n' + month_name,
    fontsize = 22,
    color = 'white',
    fontweight = 'bold',
    y = 0.95
)

ax.axis('off')
plt.show()


# Define the previous workflow in a function
def plot_a_frame(fn):
    folderout = '10. Cloud Frames'
    os.makedirs(folderout, exist_ok=True)

    data_path = root + '/' + fn
    data_cropped, data_extent = crop_and_read(data_path, bbox)
    
    data_pct = (data_cropped / obs_count) * 100
    data_pct = data_pct.clip(0, 100) 

    fig, ax = plt.subplots(1, 1, figsize=(6,6), constrained_layout=True)

    month_num = int(fn.split('_')[-1].split('.')[0])
    month_name = calendar.month_name[month_num]
    
    im1 = ax.imshow(data_pct, cmap='winter', extent = data_extent)
    # The more green the more cloudy
    
    plt.suptitle(
        'Cloud Frequency (%)\n' + month_name,
        fontsize = 22,
        color = 'white',
        fontweight = 'bold',
        y = 0.95
    )
    
    ax.axis('off')
    plt.savefig(folderout + '/' + fn.replace('.tif', '.png'), bbox_inches='tight', dpi=200)
    plt.show()


for fn in files:
    plot_a_frame(fn)


