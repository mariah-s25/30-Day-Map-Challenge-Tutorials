import osmnx as ox
import geopandas as gpd
import folium
import branca.colormap as cm

# Data from:
# https://drive.google.com/file/d/14Q64gvkqDmaGy2ToeOjIUyyyuYPy9bqN/view

gdf = gpd.read_file("3_budbalesetroads.geojson")
gdf.head(3)

len(gdf)

gdf.plot()

colormap = cm.LinearColormap(
    colors = list(reversed(cm.linear.RdYlGn_11.colors)),
    vmin = gdf['_Medianmean'].min(),
    vmax = gdf['_Medianmean'].max()
).to_step(10)

colormap

minx, miny, maxx, maxy = gdf.total_bounds
center = [(miny+maxy)/2, (minx+maxx)/2]

m = folium.Map(location = center, zoom_start = 12, tiles = "CartoDB positron")

folium.GeoJson(
    gdf,
    style_function = lambda feature: {
        "color": colormap(feature['properties']['_Medianmean']),
        "weight": 3,
        "opacity":0.9
    }
).add_to(m)

colormap.caption = "Traffic accidents (2015-2018)"
colormap.add_to(m)

m.fit_bounds([[miny, minx], [maxy, maxx]])

m.save('budapest_accidents.html')
m

city_name = 'Beirut'

G = ox.graph_from_place(
    city_name,
    network_type="all",
    simplify=True
)

nodes, edges = ox.graph_to_gdfs(G)

def normalize_highway(val):
    if isinstance(val, list):
        return val[0]
    return val

edges["highway"] = edges["highway"].apply(normalize_highway)


road_colors = {
    "motorway": "#ff0000",
    "trunk": "#ff5500",
    "primary": "#ff9900",
    "secondary": "#ffd000",
    "tertiary": "#ffff00",
    "residential": "#00ccff",
    "unclassified": "#999999",
    "service": "#bbbbbb",
    "living_street": "#66ffcc",
    "pedestrian": "#00ff99",
    "track": "#996633",
    "path": "#66cc66",
    "footway": "#66cc66",
    "steps": "#339966",
}
default_color = "#888888"


admin = ox.geocode_to_gdf(city_name)

center = [
    admin.geometry.iloc[0].centroid.y,
    admin.geometry.iloc[0].centroid.x
]

m = folium.Map(
    location=center,
    tiles="CartoDB_dark_matter",
    control_scale=True
)


roads_layer = folium.FeatureGroup(name="Road Network", show=True)

for road_type, subset in edges.groupby("highway"):
    color = road_colors.get(road_type, default_color)

    folium.GeoJson(
        subset,
        style_function=lambda feature, color=color: {
            "color": color,
            "weight": 1.5,
            "opacity": 0.8
        },
        name=road_type
    ).add_to(roads_layer)


admin_layer = folium.FeatureGroup(name="Admin Boundary", show=True)

folium.GeoJson(
    admin,
    style_function=lambda feature: {
        "fillColor": "#ffffff",
        "color": "#ffffff",
        "weight": 2,
        "fillOpacity": 0.1
    }
).add_to(admin_layer)


admin_layer.add_to(m)
roads_layer.add_to(m)

folium.LayerControl(collapsed=False, position="topright").add_to(m)

m
